<% if user_signed_in? &&  profile_empty?(current_user)  %>
    <p>
      Votre profile n'est pas créer veuillez le faire en accédant au lien suivant :
    </p>
    <%= link_to "Créer profile", new_profile_user_path %>
<% else%>

<div class="container">  
  <div class="rounded">
    <div style="display:flex;">      


      <div class="polaroid">
        <% if @profile_user.present? %>
          <div class="user-pic">
            <%= image_tag @profile_user.image.variant(resize_to_limit: [250, 800]) if @profile_user.image.attached? %>
          </div>
        <% else %>
         <img class="img-responsive img-rounded" src="data:image/png;base64,"
           alt="User picture">
        <% end %>
        <div class="container">
        <p class="alias">
          <% if @profile_user.present? %>
            <%= @profile_user.nom %>
          <% end %>
        </p>
        </div>
      </div>
      <div class="content">      
            <p>
              <span class="text">Nom:</span>
                <% if @profile_user.present? %>
                    <%= @profile_user.nom %>
                <% end %>            
            </p>

            <p>
              <span class="text">Prenom:</span>
                <% if @profile_user.present? %>
                  <%= @profile_user.prenom %>
                <% end %>
            </p>
            <p>
              <span class="text">Genre:</span>
                <% if @profile_user.present? %>
                  <%= @profile_user.genre%>
                <% end %>
            </p>

            <p>
              <span class="text">Situation:</span>
                <% if @profile_user.present? %>
                  <%= @profile_user.situation%>
                <% end %>
            </p>


            <p>
              <span class="text">Numero:</span>
                <% if @profile_user.present? %>
                  <%= @profile_user.numero %>
                <% end %>
            </p>


      </div>
    </div>
    <% if @profile_user.present? %>
        <% if user_signed_in? && current_user.id==@profile_user.user.id %>
              <div style="display:flex; justify-content:flex-start">
                <div>
                  <% if user_signed_in? %>
              
                  <% end %> 
                </div>

                <div style="margin-left:10%;">
                  <%=link_to 'Modifier profile', edit_profile_user_path(@profile_user) , class:"btn btn-info" %>
                </div>
                <div style="margin-left:10%;">  
                  <%= link_to 'Modifier compte', edit_user_registration_path, class:"button btn btn-warning" %>
                </div>  

                <div style="margin-left:10%;">  
                  <%=link_to 'Supprimer', profile_user_path(@profile_user), method: :delete, data: { confirm: 'Are you sure?' } , class:"button btn btn-danger" %>
                </div>          

              </div> 
          <% end %>
    <% end %>    
 
       
  </div> 
  <%= link_to "Back", :back , class:"back btn btn-info"%> 
</div>


     
<% end %>


