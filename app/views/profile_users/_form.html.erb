<%= form_with(model: profile_user, local: true) do |form| %>
  <% if profile_user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile_user.errors.count, "error") %> prohibited this profile user from being saved:</h2>

      <ul>
        <% profile_user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-floating mt-4 ">
    <%= form.label :nom %>
    <%= form.text_field :nom , class: "form-control", id: "inputNom"%>
  </div>

  <div class="form-floating mt-4 ">
    <%= form.label :prenom %>
    <%= form.text_field :prenom , class: "form-control", id: "inputPrenom"%>
  </div>

  <div class="form-floating mt-4 ">
    <%= form.label :genre %>
    <%= form.text_field :genre , class: "form-control", id: "inputGenre"%>
  </div>

  <div class="form-floating mt-4 ">
    <%= form.label :situation %>
    <%= form.text_field :situation , class: "form-control", id: "inputSituation"%>
  </div>

  <div class="form-floating mt-4 ">
    <%= form.label :numero %>
    <%= form.text_field :numero , class: "form-control", id: "inputNumero"%>
  </div>

  <div class="form-floating mt-4 ">
    <%= form.label :image %>
    <%= form.file_field :image , class: "form-control", id: "inputImage"%>
  </div>


  <%= form.hidden_field :user_id, value: current_user.id %>

  <div class="form-floating mt-4 mb-4 submit ">
    <%= form.submit class: "btn btn-success", style:"width:25%;"%>
  </div>
<% end %>
