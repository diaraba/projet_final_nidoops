<div class="comment-form">
  <%= form_with(model: [avis_offre, comment]) do |form| %>
    <div class="field">
      <%= form.label :description, "Contenu des commentaires" %> <br>
      <%= form.text_area :description %>
    </div>
  
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
</div>
