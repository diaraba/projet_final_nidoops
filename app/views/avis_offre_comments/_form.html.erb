<div class="comment-form">
  <%= form_with(model: [avis_offre, comment]) do |form| %>

    <div class="form-floating">
        <label for="inputDescription">Commentaires</label>
        <%= form.text_area :description, placeholder: "Entrer votre commentaire...", class: "form-control", id: "inputDescription" %>
    </div>
    
    <br/>
    
    <div class="form-floating">
      <%= form.submit  "Envoyer", class: " btn text-uppercase" %>
    </div>
  <% end %>
</div>
