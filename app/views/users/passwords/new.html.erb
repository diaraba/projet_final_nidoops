<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div  class="form-floating mt-4 mb-4  ">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control", id: "inputEmail" %>
  </div>

  <div  class="form-floating mt-4 mb-4 submit ">
    <%= f.submit "Send me reset password instructions" , class: "btn btn-success", style:"width:25%"%>
  </div>
<% end %>

<div class="shared_link">
    <%= render "users/shared/links" %>
</div>
