<h2>Avis offres</h2>
<%= link_to 'Ajouter avis_offre', new_avis_offre_path, class:" btn btn-info"%>


<div class="row mt-5">
      <% @avis_offres.each do |avis_offre| %>
          <div class="col-sm-6">
            <div class="card">
              <div class="card-body">
                <div class="second_style">
                  <%= image_tag avis_offre.image.variant(resize_to_limit: [100, 800]) if avis_offre.image.attached? %> 
                </div>
                <h5 class="card-title">
                   <%= avis_offre.title %>
                </h5>
                <p class="card-text">
                    <%= avis_offre.purpose %>
                </p>
                <div class="gosomwhere">
                    <%= link_to 'Voir', avis_offre , class:" btn btn-info" %>
                </div>
              </div>
            </div>
          </div>
      <% end %>
</div>


<div style="margin-top: 5%; ">  
  <%= link_to "Back", :back, class:"back btn btn-info" %>
</div> 

